pipeline {
    agent any
    parameters {
        booleanParam(defaultValue: "", description: 'Run Target Scripts', name: 'TARGET')
    }
    stages {
        stage('Build') {
            steps {
                echo 'Running The Requirements...'
                sh "pip install -r requirements.txt"
                echo 'Requirements Complete!'
            }
        }
        stage('Code Quality') {
            steps {
              sh "pylint-fail-under --fail_under 7 *.py"
            }
        }
        stage('Code Quantity') {
            steps {
              sh "ls *.py | wc -l"
            }
        }
        stage('Zip') {
            steps {
                sh "zip app.zip *.py"
            }
            post {
                always {
                    archiveArtifacts artifacts: "app.zip"
                }
            }
        }
    }
}
